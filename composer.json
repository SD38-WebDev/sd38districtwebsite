{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/addanother": "^1.0",
        "drupal/admin_toolbar": "^2.0",
        "drupal/backup_migrate": "^4.1",
        "drupal/better_search": "^1.5",
        "drupal/block_class": "^1.1",
        "drupal/block_class_select": "^1.1",
        "drupal/bootstrap_datetime_picker": "^1.2",
        "drupal/bootstrap_layouts": "^5.1",
        "drupal/bootstrap_library": "^1.11",
        "drupal/ckwordcount": "^1.0",
        "drupal/config_installer": "^1.8",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.7.0",
        "drupal/ctools": "^3.2",
        "drupal/custom_body_class": "^1.2",
        "drupal/dropzonejs": "^2.0",
        "drupal/menu_block": "1.x-dev",
        "drupal/slick": "^2.0",
        "drupal/slick_views": "^2.1",
        "drupal/smart_date": "^2.0",
        "drupal/template_whisperer": "^2.3",
        "drupal/token": "^1.6",
        "drupal/views_slideshow": "^4.6",
        "drush/drush": "^9.0.0",
        "enyo/dropzone": "^5.5",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "patches": {
            "drupal/custom_body_class:^1.2": {
                "Patch to fix fatal errors on node revisions": "https://www.drupal.org/files/issues/2019-01-05/get-error-when-revert-node-2997700-3.patch"     
            },
            "drupal/fullcalendar_view:2.x-dev": {
                "Updates Full Calendar View to support Smart Dates": "https://www.drupal.org/files/issues/2019-10-19/fullcalendar_view-smart_date-support-3061341-21.patch"     
            },
            "drupal/menu_block": {
				"[ #2809699-87] Add configuration options for dynamic block titles" : "https://www.drupal.org/files/issues/2019-10-06/2809699-87.menu_block-label_configuration.patch",
				"[ #2950943-15] Add links to menu parent block title" : "https://www.drupal.org/files/issues/2019-10-06/2950943-15.menu_block-title_as_link.patch"
			}
        }
    }
}
